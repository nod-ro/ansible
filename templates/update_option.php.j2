<?php
// Load WordPress
require_once('{{ web_root }}/{{ domain_name }}/wp-load.php');  // Load WordPress Core for direct interactions

// Get the option name and value from the command line arguments
function maybe_json_decode($string) {
    $decoded = json_decode($string, true);
    if (json_last_error() === JSON_ERROR_NONE) {
        return $decoded;
    }
    return maybe_unserialize($string);
}

$option_name = $argv[1];
$option_value = maybe_json_decode($argv[2]);

// Update the option
update_option($option_name, $option_value);